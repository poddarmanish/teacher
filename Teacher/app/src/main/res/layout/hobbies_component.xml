<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hobbies_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/twenty_dp"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:paddingTop="@dimen/five_dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/box_profile_items"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/five_dp"
                android:paddingLeft="@dimen/five_dp"
                android:paddingTop="@dimen/five_dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dip"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="ADD" />

                    <ImageView
                        android:id="@+id/hobbies_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dip"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_edit_grey"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Area of interest"
                    android:textColor="#5c6bc0"
                    android:textSize="18sp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/hobbies_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/three_dp"
                android:paddingLeft="@dimen/five_dp"
                android:paddingRight="@dimen/five_dp"
                android:paddingTop="@dimen/three_dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/hobbiesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eating, sleeping, dancing"
                    android:textColor="#757575"
                    android:textSize="14sp"

                    />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
